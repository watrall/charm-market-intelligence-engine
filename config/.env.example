# === Paths ===
DATA_DIR=data
REPORTS_DIR=reports

# === Feature toggles ===
USE_SQLITE=true
USE_SHEETS=true            # appends rows to Google Sheets (see placeholders below)
USE_CLUSTERING=false       # enable TF-IDF + KMeans clusters
USE_LLM=true              # enable LLM brief generation

# === Google Sheets (required for USE_SHEETS=true) ===
GOOGLE_SERVICE_ACCOUNT_FILE=ENTER_PATH_TO_SERVICE_ACCOUNT_JSON_HERE   # e.g., secrets/service_account.json
GOOGLE_SHEET_ID=ENTER_GOOGLE_SHEET_ID_HERE
GOOGLE_SHEET_WORKSHEET=jobs

# === LLM (optional) ===
LLM_PROVIDER=openai        # openai | ollama
OPENAI_API_KEY=ENTER_OPENAI_API_KEY_HERE
OLLAMA_BASE_URL=http://localhost:11434  # change if your Ollama runs elsewhere
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=1200

GOOGLE_SHEET_WORKSHEET_REPORTS=reports


# === Notifications (optional) ===
MATTERMOST_WEBHOOK_URL=ENTER_MATTERMOST_WEBHOOK_URL_HERE
DASHBOARD_URL=ENTER_DASHBOARD_URL_HERE

USER_AGENT=CHARM/1.0 (+ENTER_GITHUB_REPO_URL_HERE)
LLM_BASE_URL=http://localhost:8000/v1  # for openai-compatible self-hosted servers (e.g., vLLM)
